<Window x:Class="PowerHotkeysWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerHotkeysWPF"
        mc:Ignorable="d"
        Title="PowerUser Keys" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style x:Key="ShortcutCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="KeyboardKeyStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="#FFFFFF" CornerRadius="12" BorderBrush="#E5E5E5" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="PowerUser Keys" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="#323130" VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" Content="✖" 
                        FontSize="16" Width="32" Height="32"
                        Background="Transparent" BorderThickness="0"
                        Foreground="#605E5C" 
                        Click="CloseButton_Click"
                        Style="{x:Null}"/>
            </Grid>

            <!-- Search and Filter Controls -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" x:Name="SearchTextBox"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14" Height="32" Padding="8"
                         Background="#F8F9FA" BorderBrush="#E5E5E5"
                         BorderThickness="1"/>

                <ComboBox Grid.Column="2" x:Name="CategoryComboBox"
                          ItemsSource="{Binding Categories}"
                          SelectedValue="{Binding SelectedCategory}"
                          SelectedValuePath="Name"
                          DisplayMemberPath="Name"
                          FontSize="14" Height="32"
                          Background="#F8F9FA" BorderBrush="#E5E5E5"
                          BorderThickness="1"/>
            </Grid>

            <!-- Shortcuts Grid -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="ShortcutsGrid" ItemsSource="{Binding FilteredShortcuts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ShortcutCardStyle}">
                                <StackPanel>
                                    <!-- Application/Category -->
                                    <TextBlock Text="{Binding Application}" 
                                              FontSize="11" FontWeight="SemiBold"
                                              Foreground="#605E5C" Margin="0,0,0,4"/>
                                    
                                    <!-- Shortcut Keys -->
                                    <TextBlock Text="{Binding Keys}" 
                                              Style="{StaticResource KeyboardKeyStyle}"
                                              FontSize="14" FontWeight="Bold"
                                              Margin="0,0,0,8"/>
                                    
                                    <!-- Description -->
                                    <TextBlock Text="{Binding Description}" 
                                              FontSize="12" TextWrapping="Wrap"
                                              Foreground="#323130" LineHeight="16"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
